<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/onSecondary"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/wpTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Set Wallpaper"
            android:padding="5dp"
            android:textSize="18sp"
            android:textColor="@color/onPrimary"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/btnHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/onSecondary"
            android:text="Home Screen"
            android:padding="5dp"
            android:textSize="14sp"
            android:textColor="@color/onPrimary"
            />

        <Button
            android:id="@+id/btnLock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/onSecondary"
            android:text="Lock Screen"
            android:padding="5dp"
            android:textSize="14sp"
            android:textColor="@color/onPrimary"
            />

        <Button
            android:id="@+id/btnBoth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/onSecondary"
            android:text="Both Screen"
            android:padding="5dp"
            android:textSize="14sp"
            android:textColor="@color/onPrimary"
            />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/onPrimary"
            android:text="CANCEL"
            android:padding="5dp"
            android:textSize="14sp"
            android:textColor="@color/onSecondary"
            />

    </LinearLayout>

</LinearLayout>